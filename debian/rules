#!/usr/bin/make -f

# This file was automatically generated by stdeb 0.6.0+git at
# Thu, 02 Jun 2011 13:54:47 +0200

ifneq ($(strip $(shell cat .install_prefix)),)
	FD_INSTALL_PREFIX="$(shell cat .install_prefix)"
	FD_INSTALL_OPTIONS=--prefix="$(FD_INSTALL_PREFIX)"
endif

%:
	dh $@ --with python2 --buildsystem=python_distutils

override_dh_auto_install:
	dh_auto_install -- ${FD_INSTALL_OPTIONS}

	# move files for which we ignore the install prefix
	if [ "x$(FD_INSTALL_PREFIX)" != "x" ]; then \
           base=debian/classicmenu-indicator/; \
	   installdir="$$base/$(FD_INSTALL_PREFIX)"; \
	   mv "$$installdir/etc/xdg/autostart/"* "$$base/etc/xdg/autostart"; \
	   mkdir -p "$$base/usr/share"; \
	   mv "$$installdir/share/applications" "$$base/usr/share"; \
	fi
